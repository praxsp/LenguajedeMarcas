<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE Arboles>
<arboles>

    <arbol>
     <nombre cientifico="Acer monspessulanum">
       
       <especificaciones>
          <nombre-comun>Arce de Montpellier-Arce menor</nombre-comun>
          <vegetacion>Caducifolio</vegetacion>
          <altura>De 6 a 10 metros</altura>
          <forma-estructura-estructura>Copa esférica. Tronco principal recto con bifurcaciones. Ramaje colgante</forma-estructura-estructura>
          <color-primavera>Haz verde brillante, envés verde blanquecino</color-primavera>
          <resistencia-heladas>Heladas fuertes (hasta -15ºC)</resistencia-heladas>
       </especificaciones>
       </nombre>
    </arbol>

    <arbol>
      <nombre cientifico="Olea europea">
         
         <especificaciones>
           <nombre-comun>Olivo</nombre-comun>
           <vegetacion>Perenne</vegetacion>
           <altura>De 8 a 15 metros</altura>
           <forma-estructura>Copa irregular. Tronco principal irregular con bifurcaciones.</forma-estructura>
         </especificaciones>
         </nombre>
    </arbol>

    <arbol>
      <nombre cientifico="Ramaje tortuoso">
         
         <especificaciones>
           <color-primavera>Haz verde oscuro, envés verde plateado</color-primavera>
           <resistencia-heladas>Heladas medias (hasta -10ºC)</resistencia-heladas>
         </especificaciones>
         </nombre>
    </arbol>

     <arbol>  
      <nombre cientifico="Platanus orientalis"> 
         
         <especificaciones>
           <nombre-comun>Platano</nombre-comun>
           <vegetacion>Caducifolio</vegetacion>
           <altura>De 20 a 25 metros</altura>
           <forma-estructura>Copa ovoidal. Tronco principal recto. Ramaje expandido</forma-estructura>
           <color-primavera>Haz verde medio, enves verde claro</color-primavera>
           <color-otono>Ocre</color-otono>
           <resistencia-heladas>Heladas fuertes (hasta -20ºC)</resistencia-heladas>

         </especificaciones>
         </nombre>
      </arbol>

      <arbol>
      <nombre cientifico="Quercus ilex">
         <especificaciones>
           <nombre>Encina</nombre>
           <vegetacion>Perenne</vegetacion>
           <altura>En torno a 25 metros</altura>
           <forma-estructura>Copa esférica o elíptica irregular. Tronco principal recto. Ramaje tortuoso</forma-estructura>
           <color-primaver>Plateado en hojas jóvenes. En hojas antiguas, haz verde oscuro, envés plateado</color-primaver>
           <resistencia-heladas>Heladas fuertes (hasta -15ºC)</resistencia-heladas>

         </especificaciones>
         </nombre>
       </arbol>
        


</arboles>